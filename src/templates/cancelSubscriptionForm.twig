{% import "_includes/forms" as forms %}

<fieldset class="cancel-optionss">
    <div class="multitext">
        <div class="multitextrow">
            {{ forms.selectField({
                label: 'Cancel subscription'|t('commerce-stripe'),
                name: 'cancelImmediately',
                options: [
                    {label: 'Immediately'|t('commerce-stripe'), value: '1'|hash},
                    {label: 'On period end', value: '0'|hash}
                ]
            }) }}
        </div>
    </div>
</fieldset>